
.features
	background-color #f5f5f5
	padding 140px 0 110px


.tab-nav

	a
		display block
		max-width 110px
		font-size 1.05em
		margin 1px
		background-color $second-color
		color #fff
		text-align center
		text-transform uppercase
		padding 40px 0
		transit background-color
		font-weight bold

		&:hover, &.active
			background-color $main-color




.tabs-content

	.tab-item
		display none
		position relative

		&-text
			padding-left 20px

		&-image
			padding-top 20px
			text-align right

			img
				width auto
				max-width 100%

	h2
		margin-bottom 40px

	p
		margin-bottom 17px
		line-height 1.6

	a.btn
		margin-top 30px

