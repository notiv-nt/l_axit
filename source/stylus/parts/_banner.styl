
.banner
	background-repeat no-repeat
	background-size cover
	background-position center
	background-attachment fixed
	background-image url('../img/banner.jpg')
	padding 250px 0 130px

	h1
		divider(#fff)
		letter-spacing .04em
		padding-top 25px

	p
		font-family $font-rl
		font-weight 300
		font-size toem(16)
		color rgba(#fff, .8)
		line-height 1.5
		margin-bottom 40px

	form
		border-radius 3px
		background-color #fff

		.fields
			padding 18px 40px 26px

		.field
			padding 16px 0


	h3
		background-color #f5f5f5
		font-size toem(20)
		color #333
		font-weight bold
		text-align center
		padding 15px 0

		span
			color $main-color
			text-transform uppercase

	.field-button
		box-shadow none
		display block
		width 100%
		padding-top 16px
		padding-bottom @padding-top








